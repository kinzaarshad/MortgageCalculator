<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemMainScreen">
        <!-- Customize your theme here. -->
        <item name="android:width">@dimen/_50sdp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" ></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LabelStyle">

        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="textHeading">

        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="EditTexts" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:ems">10</item>

    </style>

    <style name="TextMedium" >
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextMediumBlack" >
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextMediumWhite" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextSmall" >
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextSmallBlack" >
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextSmallWhite" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextLarge" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_34ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>
    <style name="TextMediumGreen" >
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>
    <style name="TextSmallGreen" >
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

</resources>